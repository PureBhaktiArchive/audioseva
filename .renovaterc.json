{
  "extends": [
    "config:base",
    "group:test",
    "group:definitelyTyped",
    ":maintainLockFilesMonthly"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "sourceUrlPrefixes": ["https://github.com/vuejs/"],
      "packagePatterns": "^vue-",
      "packageNames": ["vue2-dropzone"],
      "groupName": "vue"
    },
    {
      "packagePatterns": ["^moment-"],
      "packageNames": ["moment"],
      "groupName": "moment"
    },
    {
      "packageNames": ["firebase", "firebaseui"],
      "groupName": "firebase"
    },
    {
      "packageNames": ["vuetify"],
      "major": { "groupName": null }
    },
    {
      "paths": ["frontend"],
      "extends": [
        ":timezone(America/New_York)",
        ":assignAndReview(DadImScared)",
        "group:allNonMajor"
      ],
      "managerBranchPrefix": "frontend/",
      "commitMessagePrefix": "Frontend:"
    },
    {
      "paths": ["functions"],
      "extends": [
        ":timezone(Asia/Novokuznetsk)",
        ":assignAndReview(anantakrishna)",
        "group:all"
      ],
      "managerBranchPrefix": "functions/",
      "commitMessagePrefix": "Functions:"
    },
    {
      "depTypeList": ["devDependencies"],
      "automerge": true
    }
  ]
}
