{
  "extends": [
    "config:base",
    "group:test",
    "group:definitelyTyped",
    "schedule:earlyMondays",
    ":maintainLockFilesWeekly",
    ":timezone(Asia/Novokuznetsk)",
    ":assignAndReview(anantakrishna)"
  ],
  "rebaseStalePrs": false,
  "rebaseConflictedPrs": false,
  "packageRules": [
    {
      "paths": ["frontend"],
      "extends": ["group:all"],
      "managerBranchPrefix": "frontend/",
      "commitMessagePrefix": "Frontend:"
    },
    {
      "paths": ["functions"],
      "extends": ["group:all"],
      "managerBranchPrefix": "functions/",
      "commitMessagePrefix": "Functions:"
    },
    {
      "paths": ["CRP"],
      "extends": ["group:all"],
      "managerBranchPrefix": "CRP/",
      "commitMessagePrefix": "CRP:"
    }
  ]
}
