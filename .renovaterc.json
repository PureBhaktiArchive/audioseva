{
  "extends": [
    ":automergeMinor",
    ":dependencyDashboard",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":maintainLockFilesWeekly",
    ":prNotPending",
    "helpers:disableTypesNodeMajor",
    "group:googleapis",
    "group:definitelyTyped",
    "group:monorepos",
    "group:test",
    "group:linters"
  ],
  "stabilityDays": 5,
  "major": {
    "dependencyDashboardApproval": true
  },
  "packageRules": [
    {
      "sourceUrlPrefixes": ["https://github.com/vuejs"],
      "groupName": "vue monorepo"
    },
    {
      "packageNames": ["firebase", "firebaseui", "vuefire"],
      "groupName": "frontend firebase packages"
    },
    {
      "packageNames": ["firebase-functions", "firebase-admin"],
      "groupName": "backend firebase packages"
    },
    {
      "packageNames": ["ts-jest"],
      "groupName": "test packages"
    },
    {
      "sourceUrlPrefixes": ["https://github.com/vuetifyjs/vue-cli-plugins"],
      "groupName": "vuetify vue-cli plugins"
    },
    {
      "sourceUrlPrefixes": ["https://github.com/googleapis/"],
      "groupName": "googleapis packages"
    }
  ]
}
