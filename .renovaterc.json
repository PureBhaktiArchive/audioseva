{
  "extends": [
    "config:base",
    "group:test",
    "group:definitelyTyped",
    ":maintainLockFilesMonthly"
  ],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "paths": ["frontend"],
      "extends": [
        ":timezone(America/New_York)",
        ":assignAndReview(DadImScared)",
        "group:all",
        ":followTag(vuetify, stable)"
      ],
      "managerBranchPrefix": "frontend/",
      "commitMessagePrefix": "Frontend:"
    },
    {
      "paths": ["functions"],
      "extends": [
        ":timezone(Asia/Novokuznetsk)",
        ":assignAndReview(anantakrishna)",
        "group:all"
      ],
      "managerBranchPrefix": "functions/",
      "commitMessagePrefix": "Functions:"
    },
    {
      "depTypeList": ["devDependencies"],
      "automerge": true
    }
  ]
}
