{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true
  },
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.lintTask.enable": true,

  "html.format.enable": true,
  "html.format.indentHandlebars": true,
  "html.format.maxPreserveNewLines": 0,
  "html.format.wrapAttributes": "aligned-multiple",

  "json.schemas": [
    {
      "fileMatch": ["firebase.json"],
      "url": "https://raw.githubusercontent.com/firebase/firebase-tools/master/schema/firebase-config.json"
    }
  ],

  "vetur.format.defaultFormatter.html": "prettyhtml",
  "git.ignoreLimitWarning": true,

  "fileHeaderComment.parameter": {
    "*": {
      "commentbegin": "/*!",
      "commentprefix": " *",
      "commentend": " */"
    }
  },
  "fileHeaderComment.template": {
    "*": [
      "${commentbegin}",
      "${commentprefix} sri sri guru gauranga jayatah",
      "${commentend}",
      ""
    ]
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/lib": true,
    "**/dist": true
  },
  "formatFiles.excludePattern": "**/*.min.js"
}
