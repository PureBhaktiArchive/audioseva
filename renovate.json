{
  "extends": ["config:base"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "paths": ["frontend"],
      "extends": [
        "schedule:daily",
        ":timezone(America/New_York)",
        ":assignAndReview(DadImScared)",
        "group:vue-cliMonorepo",
        "group:allNonMajor"
      ],
      "managerBranchPrefix": "frontend/",
      "commitMessagePrefix": "Frontend:"
    },
    {
      "paths": ["functions"],
      "extends": [
        "schedule:earlyMondays",
        "group:allNonMajor",
        ":assignAndReview(anantakrishna)",
        ":timezone(Asia/Novokuznetsk)"
      ],
      "managerBranchPrefix": "functions/",
      "commitMessagePrefix": "Functions:"
    },
    {
      "depTypeList": ["devDependencies"],
      "automerge": true
    }
  ]
}
