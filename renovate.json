{
  "extends": ["config:base"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "paths": ["frontend"],
      "timezone": "America/New_York",
      "assignees": ["DadImScared"],
      "extends": [
        "schedule:daily",
        "group:vue-cliMonorepo",
        "group:allNonMajor"
      ]
    },
    {
      "paths": ["functions"],
      "extends": [
        "schedule:earlyMondays",
        "group:allNonMajor",
        ":assignAndReview(anantakrishna)",
        ":timezone(Asia/Novokuznetsk)"
      ]
    },
    {
      "depTypeList": ["devDependencies"],
      "automerge": true
    }
  ]
}
