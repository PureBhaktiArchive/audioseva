{
  "extends": ["config:base"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "paths": ["frontend"],
      "timezone": "America/New_York",
      "assignees": ["DadImScared"],
      "extends": ["schedule:daily"]
    },
    {
      "paths": ["frontend"],
      "timezone": "America/New_York",
      "extends": [
        "monorepo:vue-cli",
        "schedule:daily"
      ],
      "assignees": ["DadImScared"],
      "groupName": "vue-cli monorepo"
    },
    {
      "paths": ["frontend"],
      "assignees": ["DadImScared"],
      "packagePatterns": [
        "*"
      ],
      "extends": [
        "schedule:daily"
      ],
      "minor": {
        "groupName": "all non-major dependencies",
        "groupSlug": "all-minor-patch"
      }
    },
    {
      "paths": ["functions"],
      "extends": [
        "schedule:earlyMondays",
        "group:allNonMajor",
        ":assignAndReview(anantakrishna)",
        ":timezone(Asia/Novokuznetsk)"
      ]
    },
    {
      "depTypeList": ["devDependencies"],
      "automerge": true
    }
  ]
}
