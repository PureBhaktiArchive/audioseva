{
  "database": {
    "rules": "./database.rules.json"
  },
  "storage": [
    {
      "target": "uploads",
      "rules": "./functions/storage.uploads.rules"
    }
  ],
  "hosting": [
    {
      "target": "main",
    "public": "frontend/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR/..\" run build -- --mode $GCLOUD_PROJECT"
    ]
  },
    {
      "target": "CR",
      "public": "allotment",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "headers": [
        {
          "source": "**/*.js",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=0,no-cache"
            }
          ]
        },
        {
          "source": "404.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=300"
            }
          ]
        }
      ]
    }
  ],
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
