{
  "compilerOptions": {
    "lib": ["ES2022", "ES2023.Array"], // Adding 2023.Array to support `findLastIndex`. Though not all 2023 features are supported in Node v18, see https://node.green/#ES2023 and https://github.com/microsoft/TypeScript/issues/56796.
    "module": "CommonJS",
    "checkJs": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "skipLibCheck": true, // Added by suggestion https://github.com/DefinitelyTyped/DefinitelyTyped/pull/49748/files#r606848851
    "outDir": "lib",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2022"
  },
  "compileOnSave": true,
  "include": ["src"]
}
