{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "CommonJS",
    "checkJs": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "skipLibCheck": true, // Added by suggestion https://github.com/DefinitelyTyped/DefinitelyTyped/pull/49748/files#r606848851
    "outDir": "lib",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2021"
  },
  "compileOnSave": true,
  "include": ["src"]
}
